#!/usr/bin/env python3

import re
import sys

module_regex = re.compile("(?=)[ymn]")

def process(config):
    kind = module_regex.search(config).group()
    name = config.replace(f"={kind}", "")
    print(f"config {name}\n        bool\n        default {kind}\n")

with open(sys.argv[1]) as f:
    for line in f:
        process(line.strip().replace("CONFIG_", ""))
